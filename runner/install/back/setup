sudo mv libcvaux.so.2.1 libcxcore.so.2.1 libhighgui.so.2.1 libcv.so.2.1 libcxts.so.2.1 libml.so.2.1 /usr/local/lib/
cd /usr/local/lib
sudo ln -s libcvaux.so.2.1 libcvaux.so
sudo ln -s libcv.so.2.1 libcv.so
sudo ln -s libcxcore.so.2.1 libcxcore.so
sudo ln -s libcxts.so.2.1 libcxts.so
